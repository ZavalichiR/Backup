package clientserver;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.PrintWriter;
import java.net.ServerSocket;
import java.net.Socket;

public class MyServer {

    public static void main(String[] args) throws IOException {
        
        ServerSocket ss = new ServerSocket(5678); 

        //try {
            while(true) {
                final Socket s = ss.accept();
                new Thread() {
                    public void run() {
                        //try {
                            
                            PrintWriter socketWriterToServer = new PrintWriter(s.getOutputStream(), true);              
                            BufferedReader socketReaderFromClient = new BufferedReader(new InputStreamReader(s.getInputStream()));
                            socketWriterToServer.println("hello! start sending messages...");    
                            String line;
                            while(!(line = socketReaderFromClient.readLine()).equals("bye")) {  
                                System.out.println("[CLIENT " + ss.getLocalSocketAddress().toString() + "] " + line);
                                socketWriterToServer.println("[SERVER] " + line);
                            }
                            socketWriterToServer.println("bye");
                        //} catch (IOException e) {
                            //e.printStackTrace();
                       // }
                        //finally {  
                            //try {
                                s.close();
                           // } catch (IOException e) {
                           //     e.printStackTrace();
                            //}
                        //}
                    }
                }.start();
            }
        //}
        //catch(Exception e) {
            //e.printStackTrace();
        //}
        //finally {
            // Ã®nchide serverul
            ss.close();
        }
    }
}